{
    "include": [
        "src",
        "services",
        "tests",
        "wendy_security_framework.py"
    ],
    "exclude": [
        "**/.venv",
        "**/venv",
        "**/site-packages",
        "**/__pycache__",
        "tests/test_gpu_integration_pattern.py"
    ],
    // CRITICAL: src/ contains the crank.* package namespace
    // This extraPaths setting tells Pylance/Pyright to treat src/ as an import root
    // so that "from crank.capabilities.schema import ..." resolves correctly.
    // Each execution environment (src, tests, services) may also need this in their
    // own extraPaths - see the tests environment below for example.
    "extraPaths": [
        "src"
    ],
    "typeCheckingMode": "strict",
    // Core production code (src/) - strict settings
    "strict": [
        "src/**"
    ],
    // ML libraries and external dependencies - ignore stubs
    "reportMissingTypeStubs": "none",
    "stubPath": "",
    // For external libraries with unknown types, be permissive
    "reportUnknownMemberType": "none",
    "reportUnknownArgumentType": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownParameterType": "none",
    "reportUnknownLambdaType": "none",
    // Python environment
    "venvPath": ".",
    "venv": ".venv",
    "pythonVersion": "3.11",
    // Workspace-specific overrides for services (development code)
    "executionEnvironments": [
        {
            "root": "src",
            "typeCheckingMode": "strict",
            "reportUnknownMemberType": "error",
            "reportUnknownArgumentType": "error",
            "reportUnknownVariableType": "warning"
        },
        {
            "root": "services",
            "typeCheckingMode": "basic",
            "reportUnknownMemberType": "none",
            "reportUnknownArgumentType": "none",
            "reportUnknownVariableType": "none"
        },
        {
            // Test files need to import from crank.* package
            // CRITICAL: extraPaths must include "src" so Pylance can resolve
            // "from crank.capabilities.schema import ..." when analyzing test files.
            // Without this, you'll see reportMissingImports errors even though
            // the global extraPaths is set - execution environments need their own.
            "root": "tests",
            "typeCheckingMode": "basic",
            "extraPaths": [
                "src",
                "."
            ],
            "reportMissingTypeStubs": "none",
            "reportUnknownMemberType": "none",
            "reportUnknownArgumentType": "none",
            "reportUnknownVariableType": "none",
            "reportUntypedFunctionDecorator": "none",
            "reportUntypedClassDecorator": "none",
            "reportUntypedBaseClass": "none",
            "reportUntypedNamedTuple": "none"
        },
        {
            "root": "scripts",
            "typeCheckingMode": "off"
        },
        {
            "root": "tools",
            "typeCheckingMode": "off"
        }
    ]
}
