# Crank Email Classifier Container
FROM python:3.12-slim

# Create non-root user
RUN addgroup --gid 1000 worker && \
    adduser --uid 1000 --gid 1000 --disabled-password worker

# Install system dependencies needed for ML and NLP
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies (worker-specific)
COPY --chown=worker:worker services/requirements-crank-email-classifier.txt .
RUN pip install --no-cache-dir -r requirements-crank-email-classifier.txt

# Copy worker code and metadata
COPY --chown=worker:worker services/crank_email_classifier.py .
COPY --chown=worker:worker services/crank-email-classifier.plugin.yaml ./plugin.yaml

# Copy the new package structure instead of individual scripts
COPY --chown=worker:worker src/ ./src/

# Copy certificate initialization script (legacy fallback)
COPY --chown=worker:worker services/crank_cert_initialize.py ./scripts/

# Add src to Python path
ENV PYTHONPATH="/app/src"

# Create certificates directory with proper ownership
RUN mkdir -p /etc/certs && chown worker:worker /etc/certs

# Create worker startup script with certificate initialization
RUN echo '#!/usr/bin/env python3' > run_worker.py && \
    echo 'import subprocess' >> run_worker.py && \
    echo 'import sys' >> run_worker.py && \
    echo 'import os' >> run_worker.py && \
    echo '' >> run_worker.py && \
    echo 'def initialize_certificates():' >> run_worker.py && \
    echo '    """Initialize certificates from CA service."""' >> run_worker.py && \
    echo '    ca_service_url = os.getenv("CA_SERVICE_URL")' >> run_worker.py && \
    echo '    if ca_service_url:' >> run_worker.py && \
    echo '        print("ðŸ” Initializing certificates from Certificate Authority Service...")' >> run_worker.py && \
    echo '        try:' >> run_worker.py && \
    echo '            result = subprocess.run([sys.executable, "scripts/crank_cert_initialize.py"], check=True)' >> run_worker.py && \
    echo '            print("âœ… Certificates initialized successfully")' >> run_worker.py && \
    echo '        except subprocess.CalledProcessError as e:' >> run_worker.py && \
    echo '            print(f"âŒ Certificate initialization failed: {e}")' >> run_worker.py && \
    echo '            sys.exit(1)' >> run_worker.py && \
    echo '    else:' >> run_worker.py && \
    echo '        print("ðŸ”§ No CA service configured, using legacy certificate generation")' >> run_worker.py && \
    echo '' >> run_worker.py && \
    echo 'if __name__ == "__main__":' >> run_worker.py && \
    echo '    # Initialize certificates first' >> run_worker.py && \
    echo '    initialize_certificates()' >> run_worker.py && \
    echo '    ' >> run_worker.py && \
    echo '    # Start worker application' >> run_worker.py && \
    echo '    import crank_email_classifier' >> run_worker.py && \
    echo '    crank_email_classifier.main()' >> run_worker.py && \
    chmod +x run_worker.py

# Security hardening
USER worker

# Expose worker HTTPS port
EXPOSE 8200

# Health check for HTTPS-only mode
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -k -f https://localhost:${EMAIL_CLASSIFIER_HTTPS_PORT:-8201}/health || exit 1

# Run simplified startup script
CMD ["python", "run_worker.py"]
